{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "useNx": true,
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": []
    },
    "bootstrap": {
      "ignore": "npm-*",
      "npmClientArgs": ["--no-package-lock"]
    }
  }
}
